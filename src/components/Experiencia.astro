---
// Experiencia.astro
---

<section id="experiencia">
  <div class="experience-header">
    <h2>Experiencia</h2>
    <div class="header-decoration"></div>
  </div>
  
  <div class="experience-timeline">
    <div class="timeline-line"></div>
    <article class="job">
      <div class="job-card">
        <div class="job-content">
          <div class="job-header">
            <h3>Desarrollador Web Freelance</h3>
            <span class="date-badge">Enero 2024 - Presente</span>
          </div>
          <p class="job-description">
            Desarrollo de sitios web personalizados para pequeñas empresas y
            emprendedores, utilizando <span class="tech-highlight">HTML</span>, 
            <span class="tech-highlight">CSS</span>, <span class="tech-highlight">JavaScript</span> 
            y frameworks modernos.
          </p>
          <div class="tech-tags">
            <span class="tech-tag">React</span>
            <span class="tech-tag">Astro</span>
            <span class="tech-tag">GSAP</span>
            <span class="tech-tag">Node.js</span>
          </div>
        </div>
        <div class="job-visual">
          <div class="logo-container">
            <div class="logo-glow"></div>
            <img src="/canalplad.webp" alt="Logo Freelance" class="company-logo" />
          </div>
          <div class="job-indicator">
            <div class="indicator-dot"></div>
            <div class="indicator-pulse"></div>
          </div>
        </div>
      </div>
    </article>
    <article class="job reverse">
      <div class="job-card">
        <div class="job-content">
          <div class="job-header">
            <h3>Desarrollador Web en Signlab</h3>
            <span class="date-badge">Marzo 2025 - Jun 2025</span>
          </div>
          <p class="job-description">
            Responsable del desarrollo y mantenimiento de sitios web para clientes
            diversos, utilizando tecnologías como <span class="tech-highlight">VUE</span>, 
            <span class="tech-highlight">PHP</span>, <span class="tech-highlight">SQL</span>.
          </p>
          <div class="tech-tags">
            <span class="tech-tag">Vue.js</span>
            <span class="tech-tag">PHP</span>
            <span class="tech-tag">MySQL</span>
            <span class="tech-tag">Sass</span>
            <span class="tech-tag">PostgreSQL</span>
          </div>
        </div>
        <div class="job-visual">
          <div class="logo-container">
            <div class="logo-glow"></div>
            <img src="/signlab.jfif" alt="Logo Signlab" class="company-logo" />
          </div>
          <div class="job-indicator">
            <div class="indicator-dot"></div>
            <div class="indicator-pulse"></div>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>